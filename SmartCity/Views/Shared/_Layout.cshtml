<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cidade Inteligente</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartCity.styles.css" asp-append-version="true" />
</head>


    <body class="d-flex h-100 text-center text-white bg-dark">

        <div class="cover-container d-flex w-500 h-500 p-3 mx-auto flex-column">
            <header class="mb-auto">
                <div>
                    <h3 class="float-md-start mb-0">SMARTCITY</h3>
                    <nav class="nav nav-masthead justify-content-center float-md-end">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
              
                    </nav>
                </div>
            </header>

            <main class="px-3">
            <h1>SMARTCITY</h1>
                <p class="lead">Aplicação para monitorizar e verificar a ocupação ou disponibilidade do parque. </p>
                
                <p> @RenderBody()</p>
            </main>

            <footer class="mt-auto text-white-50">
                <p>Desenvovido por <a href="" class="text-white">smartcity</a> <a href="https://twitter.com/mdo" class="text-white"></a>.</p>
            </footer>
        </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
